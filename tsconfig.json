{
	"compilerOptions": {
		"module": "ESNext",
		"target": "es2020",
		"sourceMap": true,
		"strict": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"exclude": ["node_modules"]
}
